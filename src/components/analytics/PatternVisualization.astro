---

import type { PatternVisualizationProps } from './PatternVisualizationReact'
import type {
  } from '@/lib/ai/services/PatternRecognitionService'

export interface Props extends PatternVisualizationProps {
  title?: string
  description?: string
}

const {
  } = Astro.props
---

<div class="pattern-visualization w-full transition-colors duration-300">
  {
    title && (
      <h2 class="text-lg font-medium mb-2 text-gray-700 dark:text-gray-300">
        {title}
      </h2>
    )
  }
  {
    description && (
      <p class="mb-4 text-sm text-gray-600 dark:text-gray-400">{description}</p>
    )
  }

  <PatternVisualizationReact
    client:load
    {trends}
    {crossSessionPatterns}
    {riskCorrelations}
    {isLoading}
    {onPatternSelect}
  />
</div>

<style>
  /* Ensure smooth dark mode transitions */
  :root {
    --transition-duration: 300ms;
  }

  .transition-colors {
    transition:
      background-color var(--transition-duration) ease-in-out,
      color var(--transition-duration) ease-in-out,
      border-color var(--transition-duration) ease-in-out;
  }

  .pattern-visualization :global(.recharts-surface) {
    overflow: visible;
  }
</style>
