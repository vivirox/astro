---
import BaseLayout from '@/layouts/BaseLayout.astro'

const title = '404 - Page Not Found'
const description = 'Sorry, the page you are looking for could not be found.'
---

<BaseLayout title={title} description={description}>
  <div class="container mx-auto px-4 py-16 text-center">
    <h1 class="text-4xl font-bold mb-4">404</h1>
    <p class="text-xl mb-8">Page not found</p>
    <p>Nice to meet you tho!</p>
    <a href="/" class="inline-block bg-blue-500 text-white px-4 py-2 rounded mt-4 hover:bg-blue-600">
      Return Home
    </a>
  </div>
</BaseLayout>
