---
import MainLayout from '../layouts/MainLayout.astro';

const title = "Test Page";
const description = "A simple test page to verify the build process.";
---

<MainLayout title={title} description={description}>
  <div class="container mx-auto py-12 px-4">
    <h1 class="text-4xl font-bold mb-8 text-center">Test Page</h1>

    <div class="max-w-3xl mx-auto bg-white dark:bg-gray-800 p-8 rounded-lg shadow-md">
      <p class="mb-4">
        This is a simple test page to verify that the Astro build process works correctly.
      </p>

      <p class="mb-4">
        If you can see this page, it means that the build was successful!
      </p>

      <div class="flex justify-center mt-8">
        <a href="/" class="px-6 py-3 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors">
          Return Home
        </a>
      </div>
    </div>
  </div>
</MainLayout>
