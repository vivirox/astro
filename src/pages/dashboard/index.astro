---
import BaseLayout from '../../layouts/BaseLayout.astro'
import Button from '../../components/ui/Button.astro'
---

<BaseLayout
  title="Dashboard | Gradiant Ascent"
  description="Your personal dashboard for managing your Gradiant Ascent account and accessing your data."
  bgType="plum"
>
  <div class="min-h-screen bg-gray-50">
    <!-- Dashboard Header -->
    <header class="bg-white shadow">
      <div
        class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex justify-between items-center"
      >
        <h1 class="text-2xl font-bold text-gray-900">Dashboard</h1>
        <div class="flex items-center space-x-4">
          <span class="text-sm text-gray-600">Welcome, User</span>
          <Button variant="outline" size="sm" href="/login">Logout</Button>
        </div>
      </div>
    </header>

    <!-- Dashboard Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Stats Cards -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-lg font-medium text-gray-900 mb-2">Sessions</h2>
          <p class="text-3xl font-bold">12</p>
          <p class="text-sm text-gray-500 mt-1">+2 from last week</p>
        </div>

        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-lg font-medium text-gray-900 mb-2">Progress</h2>
          <p class="text-3xl font-bold">68%</p>
          <p class="text-sm text-gray-500 mt-1">+5% from last week</p>
        </div>

        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-lg font-medium text-gray-900 mb-2">Insights</h2>
          <p class="text-3xl font-bold">24</p>
          <p class="text-sm text-gray-500 mt-1">+8 from last week</p>
        </div>
      </div>

      <!-- Recent Activity -->
      <div class="bg-white rounded-lg shadow overflow-hidden mb-8">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-medium text-gray-900">Recent Activity</h2>
        </div>
        <div class="divide-y divide-gray-200">
          <div class="px-6 py-4">
            <div class="flex justify-between items-start">
              <div>
                <p class="text-sm font-medium text-gray-900">
                  Completed Session: Emotional Awareness
                </p>
                <p class="text-sm text-gray-500 mt-1">
                  You scored 85% on this session.
                </p>
              </div>
              <span class="text-xs text-gray-500">2 days ago</span>
            </div>
          </div>
          <div class="px-6 py-4">
            <div class="flex justify-between items-start">
              <div>
                <p class="text-sm font-medium text-gray-900">
                  New Insight Discovered
                </p>
                <p class="text-sm text-gray-500 mt-1">
                  Pattern recognized in your emotional responses.
                </p>
              </div>
              <span class="text-xs text-gray-500">4 days ago</span>
            </div>
          </div>
          <div class="px-6 py-4">
            <div class="flex justify-between items-start">
              <div>
                <p class="text-sm font-medium text-gray-900">Goal Achieved</p>
                <p class="text-sm text-gray-500 mt-1">
                  Completed 10 consecutive days of practice.
                </p>
              </div>
              <span class="text-xs text-gray-500">1 week ago</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Recommendations -->
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-medium text-gray-900">Recommended for You</h2>
        </div>
        <div class="divide-y divide-gray-200">
          <div class="px-6 py-4">
            <div class="flex justify-between items-center">
              <div>
                <p class="text-sm font-medium text-gray-900">
                  Advanced Emotional Regulation
                </p>
                <p class="text-sm text-gray-500 mt-1">
                  Based on your recent progress
                </p>
              </div>
              <Button variant="outline" size="sm">Start</Button>
            </div>
          </div>
          <div class="px-6 py-4">
            <div class="flex justify-between items-center">
              <div>
                <p class="text-sm font-medium text-gray-900">
                  Stress Management Techniques
                </p>
                <p class="text-sm text-gray-500 mt-1">
                  Recommended for your profile
                </p>
              </div>
              <Button variant="outline" size="sm">Start</Button>
            </div>
          </div>
          <div class="px-6 py-4">
            <div class="flex justify-between items-center">
              <div>
                <p class="text-sm font-medium text-gray-900">
                  Empathy Building Exercise
                </p>
                <p class="text-sm text-gray-500 mt-1">New content available</p>
              </div>
              <Button variant="outline" size="sm">Start</Button>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</BaseLayout>
