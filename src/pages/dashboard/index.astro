---
import DashboardLayout from '../../layouts/DashboardLayout.astro'
import { Card } from '@/components/ui/card'
---

<DashboardLayout
  title="Dashboard | Gradiant Therapy"
  description="Your therapy dashboard - Overview and quick access to all features"
>
  <div class="container mx-auto py-6">
    <div class="flex flex-col gap-6">
      <!-- Welcome Section -->
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold tracking-tight mb-1">Welcome Back</h1>
          <p class="text-muted-foreground">
            Here's an overview of your therapy space
          </p>
        </div>
        <div class="flex items-center gap-4">
          <div class="text-right">
            <p class="text-sm font-medium">Security Level</p>
            <p class="text-xs text-muted-foreground">Maximum (FHE)</p>
          </div>
          <div
            class="h-10 w-10 rounded-full bg-gradient-to-br from-purple-600 to-blue-600 flex items-center justify-center text-white"
          >
            <span class="material-symbols-outlined text-lg">security</span>
          </div>
        </div>
      </div>

      <!-- Quick Access Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div
          class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700"
        >
          <div class="flex items-center gap-2 mb-4">
            <span class="text-purple-600 material-symbols-outlined">
              psychology
            </span>
            <h3 class="text-lg font-medium">Mental Health Chat</h3>
          </div>
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
            Start a therapeutic conversation with our AI-powered mental health
            assistant
          </p>
          <a
            href="/mental-health-chat"
            class="text-sm text-purple-600 hover:text-purple-700 font-medium"
          >
            Open Chat →
          </a>
        </div>

        <div
          class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700"
        >
          <div class="flex items-center gap-2 mb-4">
            <span class="text-blue-600 material-symbols-outlined">
              exercise
            </span>
            <h3 class="text-lg font-medium">Practice Simulator</h3>
          </div>
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
            Practice therapeutic techniques in a safe, private environment
          </p>
          <a
            href="/simulator"
            class="text-sm text-blue-600 hover:text-blue-700 font-medium"
          >
            Start Practice →
          </a>
        </div>

        <div
          class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700"
        >
          <div class="flex items-center gap-2 mb-4">
            <span class="text-green-600 material-symbols-outlined">
              analytics
            </span>
            <h3 class="text-lg font-medium">Progress Analytics</h3>
          </div>
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
            View insights and progress from your therapeutic journey
          </p>
          <button
            class="text-sm text-green-600 hover:text-green-700 font-medium"
          >
            View Analytics →
          </button>
        </div>
      </div>

      <!-- Recent Activity & Quick Stats -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div
          class="lg:col-span-2 bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700"
        >
          <h3 class="text-lg font-medium mb-4">Recent Sessions</h3>
          <div class="space-y-4">
            <p
              class="text-sm text-gray-500 dark:text-gray-400 text-center py-4"
            >
              No recent sessions found
            </p>
          </div>
        </div>

        <div
          class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700"
        >
          <h3 class="text-lg font-medium mb-4">Quick Stats</h3>
          <div class="space-y-4">
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-600 dark:text-gray-400">
                Sessions This Week
              </span>
              <span class="text-2xl font-bold"> 0 </span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-600 dark:text-gray-400">
                Total Practice Hours
              </span>
              <span class="text-2xl font-bold"> 0 </span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-600 dark:text-gray-400">
                Progress Score
              </span>
              <span class="text-2xl font-bold"> 0% </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</DashboardLayout>
