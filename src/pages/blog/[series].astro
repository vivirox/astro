---
import { getCollection } from 'astro:content'
import { getFilteredPosts } from '~/utils/post'

export const prerender = false

export async function getStaticPaths() {
  const allPosts = await getFilteredPosts('blog')

  // Get all tags as a substitute for series
  const allTags = [...new Set(allPosts.flatMap(post => post.data.tags || []))]

  return allTags.map(tag => ({
    params: { series: tag },
    props: { tag }
  }))
}

const { tag } = Astro.props

// Get all posts with this tag
const allPosts = await getFilteredPosts('blog')

// Filter and sort by date
const posts = allPosts
  .filter(post => post.data.tags?.includes(tag))
  .sort((a, b) => {
    // Sort by date (newest first)
    return new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
  })
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>#{tag} | Blog</title>
    <meta
      name="description"
      content={`Articles with tag #${tag} - Read the complete collection of posts.`}
    />
  </head>
  <body>
    <div class="max-w-6xl mx-auto px-4 py-8">
      <h1 class="text-3xl font-bold mb-2">#{tag}</h1>
      <p class="text-gray-600 mb-8">
        {posts.length} article{posts.length !== 1 ? 's' : ''} with this tag
      </p>

      <!-- Series List -->
      <div class="space-y-6">
        {
          posts.map((post, index) => (
            <div class="border-l-4 border-blue-500 pl-4">
              <div class="flex items-center mb-1">
                <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded">
                  #{tag}
                </span>
              </div>
              <h2 class="text-xl font-semibold">
                <a href={`/blog/${post.slug}`} class="hover:text-blue-600">
                  {post.data.title}
                </a>
              </h2>
              <p class="text-gray-600 mt-1">{post.data.description}</p>
              <div class="mt-2 text-sm text-gray-500">
                {new Date(post.data.pubDate).toLocaleDateString()}
              </div>
            </div>
          ))
        }
      </div>

      <div class="mt-12 text-center">
        <a
          href="/blog"
          class="px-4 py-2 border border-gray-300 rounded-md text-gray-700"
          >Back to All Articles</a
        >
      </div>
    </div>
  </body>
</html>
