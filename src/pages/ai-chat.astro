---
import BaseLayout from '../layouts/BaseLayout.astro'
import AIChat from '../components/AIChat.astro'
---

<BaseLayout title="AI Chat - TogetherAI Integration">
  <main class="container mx-auto py-8">
    <h1 class="text-3xl font-bold text-center mb-8">AI Chat with TogetherAI</h1>
    <p class="text-center mb-8 max-w-2xl mx-auto">
      This demo showcases our integration with TogetherAI. Select a model and
      start chatting!
    </p>

    <AIChat
      title="TogetherAI Chat Demo"
      description="This demo showcases our integration with TogetherAI. Select a model and start chatting!"
      showModelSelector={true}
    />

    <div class="mt-8 text-center text-sm text-gray-500">
      <p>
        Note: This component uses the TogetherAI API. Make sure your API key is
        properly configured.
      </p>
    </div>
  </main>
</BaseLayout>
