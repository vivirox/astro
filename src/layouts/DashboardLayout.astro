---
import '@/styles/global.css'
import { ClientRouter } from 'astro:transitions'
import Header from '@/components/layout/Header.astro'
import Footer from '@/components/layout/Footer.astro'
import Sidebar from '@/components/layout/Sidebar.astro'
import Head from '@/components/base/Head.astro'
import ErrorBoundary from '@/components/base/ErrorBoundary.astro'

interface Props {
  title?: string
  description?: string
  showHeader?: boolean
  showFooter?: boolean
  showThemeToggle?: boolean
  showUserMenu?: boolean
  showSocialLinks?: boolean
  showSidebar?: boolean
  contentClassName?: string
  metaImage?: string
}

const {
  title = 'Gradiant Therapy | Dashboard',
  description = 'Advanced therapeutic tools for mental health professionals',
  showHeader = true,
  showFooter = true,
  showThemeToggle = true,
  showUserMenu = true,
  showSocialLinks = true,
  showSidebar = true,
  contentClassName = '',
  metaImage = '/og-image.png',
} = Astro.props
---

<!doctype html>
<html lang="en">
  <Head {title} {description} ogImage={metaImage} />
  <body class="h-screen-min bg-light dark:bg-dark">
    <ClientRouter />

    <ErrorBoundary>
      {showHeader && <Header {showThemeToggle} {showUserMenu} />}

      <div class="flex min-h-screen flex-col lg:flex-row overflow-hidden">
        {showSidebar && <Sidebar />}

        <main
          class:list={[
            'relative h-full w-full overflow-y-auto bg-light dark:bg-dark transition-colors duration-200',
            showSidebar && 'lg:ml-64',
            contentClassName,
          ]}
        >
          <div
            class="container mx-auto px-4 pt-20 pb-4 min-h-[calc(100vh-theme(spacing.20))]"
          >
            <slot />
          </div>

          {
            showFooter && (
              <Footer showSocialLinks={showSocialLinks} className="mt-auto" />
            )
          }
        </main>
      </div>
    </ErrorBoundary>
  </body>
</html>

<style is:global>
  :root {
    --font-fallback: -apple-system, BlinkMacSystemFont, Segoe UI, Helvetica,
      Arial, sans-serif, Apple Color Emoji, Segoe UI Emoji;
    --font-body: system-ui, var(--font-fallback);
    --theme-bg: #ffffff;
    --theme-bg-dark: #1a1a1a;
    --theme-text: #1a1a1a;
    --theme-text-dark: #ffffff;
  }

  html {
    font-family: var(--font-body);
    background-color: var(--theme-bg);
    color: var(--theme-text);
    transition: background-color 0.2s ease-in-out;
  }

  html.dark {
    color-scheme: dark;
    background-color: var(--theme-bg-dark);
    color: var(--theme-text-dark);
  }

  body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
    min-height: 100dvh;
  }

  ::selection {
    background: hsl(var(--primary-500));
    color: white;
  }
</style>
