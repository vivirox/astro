---
// Title and description are used in the template
const {
  title = 'Authentication',
  description = 'Gradiant - Secure AI Therapy Platform',
} = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#0891b2" />

    <!-- Open Graph Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <!-- PWA manifest -->
    <link rel="manifest" href="/manifest.json" />
  </head>
  <body class="min-h-screen bg-background text-foreground">
    <header class="bg-white border-b border-gray-200 shadow-sm">
      <div class="container mx-auto px-4 py-4">
        <a href="/" class="flex items-center justify-center md:justify-start">
          <span class="text-2xl font-bold text-primary">Gradiant</span>
        </a>
      </div>
    </header>

    <slot />

    <footer class="py-6 border-t border-gray-200">
      <div class="container mx-auto px-4 text-center text-sm text-gray-500">
        <p>&copy; {new Date().getFullYear()} Gradiant. All rights reserved.</p>
        <div class="mt-2 space-x-4">
          <a href="/privacy" class="text-gray-500 hover:text-primary"
            >Privacy Policy</a
          >
          <a href="/terms" class="text-gray-500 hover:text-primary"
            >Terms of Service</a
          >
          <a href="/contact" class="text-gray-500 hover:text-primary">Contact</a
          >
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  .auth-container {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    padding: 2rem;
    background: linear-gradient(135deg, #f6f6f6 0%, #e9e9e9 100%);
  }

  .auth-card {
    width: 100%;
    max-width: 450px;
    padding: 2rem;
    background-color: white;
    border-radius: 8px;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.1);
  }

  .auth-logo {
    display: flex;
    justify-content: center;
    margin-bottom: 2rem;
  }
</style>
